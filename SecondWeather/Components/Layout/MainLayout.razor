@using SecondWeather.Components.Theme
@inherits LayoutComponentBase

<MudThemeProvider Theme="theme" IsDarkMode="darkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudStack Row Spacing="1">
            <MudIcon Icon="@Icons.Material.Filled.LocationOn" />
            <MudText>Petrovice</MudText>
        </MudStack>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Never">
        <AppNavMenu />
    </MudDrawer>

    <MudMainContent Class="min-height-full"
                    Style=@backgroundColorStyle>
        <MudContainer Class="py-2">
            @if (stateInProgress)
            {
                <MudSkeleton />
                <MudSkeleton SkeletonType="SkeletonType.Circle" Width="50px" Height="50px" />
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
            }
            else
            {
                @Body
            }
        </MudContainer>
    </MudMainContent>

</MudLayout>
